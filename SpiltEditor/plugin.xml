<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin
>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="spliteditor.Handler"
            commandId="SpiltEditor.command">
         <activeWhen>
            <with
                  variable="activePart">
               <instanceof
                     value="org.eclipse.ui.IEditorPart">
               </instanceof>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.textEditor"
            id="SpiltEditor.command"
            name="%command.name">
         <commandParameter
               id="orientation"
               name="%commandParameter.name"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=org.eclipse.ui.workbench.file">
         <toolbar
               id="SpiltEditor.toolbar">
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:SpiltEditor.toolbar">
         <command
               commandId="SpiltEditor.command"
               icon="icons/splithorizontally.png"
               label="%command.spliteditor.horizontally"
               style="push"
               tooltip="%command.spliteditor.horizontally">
            <parameter
                  name="orientation"
                  value="horizontally">
            </parameter>
         </command>
         <command
               commandId="SpiltEditor.command"
               icon="icons/splitvertically.png"
               label="%command.spliteditor.vertically"
               style="push"
               tooltip="%command.spliteditor.vertically">
            <parameter
                  name="orientation"
                  value="vertically">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:window?after=newEditor">
         <command
               commandId="SpiltEditor.command"
               icon="icons/splithorizontally.png"
               label="%command.spliteditor.horizontally"
               style="push">
            <parameter
                  name="orientation"
                  value="horizontally">
            </parameter>
         </command>
         <command
               commandId="SpiltEditor.command"
               icon="icons/splitvertically.png"
               label="%command.spliteditor.vertically"
               style="push">
            <parameter
                  name="orientation"
                  value="vertically">
            </parameter>
         </command>
      </menuContribution>
   </extension>

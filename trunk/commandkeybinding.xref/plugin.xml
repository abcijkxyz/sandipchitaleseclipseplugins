<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.help"
            defaultHandler="commandkeybinding.xref.ShowCommandKeybindingXREF"
            description="Show Command Keybinding XREF"
            id="commandkeybinding.xref.show"
            name="Show Command Keybinding XREF">
         <commandParameter
               id="commandkeybinding.xref.show.mode"
               name="Mode (COMMAND or KEYSEQUENCE)"
               optional="true"
               values="commandkeybinding.xref.CommandKeybindingXREFDialog.MODEValues">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="commandkeybinding.xref.show"
            icon="icons/keys.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="commandkeybinding.xref.show"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+M3+L">
         <parameter
               id="commandkeybinding.xref.show.mode"
               value="COMMAND">
         </parameter>
      </key>
      <key
            commandId="commandkeybinding.xref.show"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+M3+K">
         <parameter
               id="commandkeybinding.xref.show.mode"
               value="KEYSEQUENCE">
         </parameter>
      </key>
      <key
            commandId="commandkeybinding.xref.show"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.emacsAcceleratorConfiguration"
            sequence="CTRL+H W">
         <parameter
               id="commandkeybinding.xref.show.mode"
               value="COMMAND">
         </parameter>
      </key>
      <key
            commandId="commandkeybinding.xref.show"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.emacsAcceleratorConfiguration"
            sequence="CTRL+H K">
         <parameter
               id="commandkeybinding.xref.show.mode"
               value="KEYSEQUENCE">
         </parameter>
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.trim.status?after=additions">
         <toolbar
               id="commandkeybinding.xref.toolbar">
            <command
                  commandId="commandkeybinding.xref.show"
                  style="push"
                  tooltip="Show Command Keybinding XREF">
               <parameter
                     name="commandkeybinding.xref.show.mode"
                     value="COMMAND">
               </parameter>
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>

<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            id="text.overview"
            name="Overview"
            parentCategory="org.eclipse.ui">
      </category>
      <view
      		allowMultiple="false"
            name="Overview"
            icon="icons/overview.gif"
            category="text.overview"
            class="text.overview.views.OverviewView"
            id="text.overview.views.OverviewView"
            restorable="true">
      </view>
      <stickyView
            closeable="true"
            id="text.overview.views.OverviewView"
            location="RIGHT"
            moveable="false">
      </stickyView>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="true"
               id="text.overview.views.OverviewView"
               minimized="false"
               moveable="false"
               ratio="0.1"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
</plugin>
